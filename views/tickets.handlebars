<div class="container">
	<h1 class="user">Tickets for {{name}}</h1>

	{{#each tickets}}
	<form action="complete/:{{ticket_id}}" method="post">
		<div class="type {{type}}">{{type}}</div>
		<div class="datetime">Date: <span>{{datetime}}</span></div>
		<div class="description">Description: <span>{{description}}</span></div>
		<button type="submit">Complete</button>
	</form>
	{{/each}}
</div>